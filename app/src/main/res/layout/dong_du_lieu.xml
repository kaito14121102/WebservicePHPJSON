<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_ten"
            android:text="Nguyễn Văn A"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#003cff"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ibtn_edit"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/edit"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ibtn_delete"
            android:src="@drawable/delete1"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_namsinh"
            android:text="1999"
            android:layout_marginRight="5dp"
            android:textSize="18sp"
            android:textColor="#00ff08"
            android:layout_width="230dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_diachi"
            android:textColor="#090a09"
            android:textSize="20sp"
            android:text="Ca Mau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>